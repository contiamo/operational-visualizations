{
  "name": "visualizations-monorepo",
  "workspaces": [
    "packages/*"
  ],
  "description": "Contiamo visualizations monorepo",
  "repository": "git@github.com:contiamo/operational-visualizations.git",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prestart": "yarn build",
    "start": "lerna run start --stream --parallel",
    "pretest": "yarn build",
    "test": "jest --config=jest.json",
    "build": "lerna run build --stream --scope=@operational/{frame,grid,visualizations}",
    "clean": "lerna run clean --stream --parallel",
    "build-stories": "lerna run build --stream --scope=@operational/visualizations-stories",
    "test-stories": "lerna run test --stream --scope=@operational/visualizations-stories",
    "prepublishOnly": "operational-scripts prepare"
  },
  "devDependencies": {
    "@operational/scripts": "^1.4.0",
    "@types/jest": "^24.0.13",
    "@types/react": "^16.8.18",
    "@types/react-dom": "^16.8.4",
    "jest": "^24.8.0",
    "lerna": "^3.14.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.5"
  },
  "files": [
    "lib"
  ],
  "main": "./dist/main.js"
}
