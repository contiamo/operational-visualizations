{
  "exclude": ["node_modules", "dist", "lib", "__tests__", "**/*.test*", "**/*.spec*"],
  "files": [],
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "esnext",
    "module": "esnext",
    "lib": ["es2015", "dom", "es2016.array.include", "es2017.object"],
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "rootDir": ".",
    "outDir": "lib",
    "downlevelIteration": true,
    "strict": true,
    "removeComments": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@operational/*": ["packages/*/src"]
    },
    "composite": true
  },
  "references": [
    {
      "path": "packages/frame"
    },
    {
      "path": "packages/grid"
    },
    {
      "path": "packages/visualizations"
    },
    {
      "path": "packages/visualizations-stories"
    }
  ]
}
