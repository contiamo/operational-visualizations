{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "jsx": "react",
    "target": "es5",
    "moduleResolution": "node",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "sourceMap": true,
    "noImplicitAny": true,
    "lib": [
      "dom",
      "es6",
      "es2016",
      "dom.iterable",
      "scripthost",
      "es2017.object"
    ]
  },
  "include": [
    "src",
    "types"
  ]
}
